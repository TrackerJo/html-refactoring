{
  "name": "html-refactoring",
  "displayName": "HTML Refactoring",
  "description": "Refactor html tags ID and Class names",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:css",
    "onLanguage:javascript",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
        "editor/context": [{
            "when": "resourceLangId == html",
            "command": "html-refactoring.refactor",
            "group": "1_modification"
      }]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "refactor-sidebar-view",
          "title": "HTML Refactoring",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "refactor-sidebar-view": [
        {
          "type": "webview",
          "id": "refactor-sidebar",
          "name": "HTML Refactoring",
          "icon": "media/icon.svg",
          "contextualTitle": "HTML Refactoring"
        }
      ]
    },
    "commands": [
     
      {
        "command": "html-refactoring.refactor",
        "title": "HTML Refactor"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.36"
  }
}
